ARG RAILS_IMAGE=

FROM ${RAILS_IMAGE}

ARG GITLAB_CONFIG=/srv/gitlab/config
ARG GITLAB_VERSION
ARG GITLAB_USER=git

LABEL source="https://gitlab.com/gitlab-org/gitlab" \
      name="GitLab Puma" \
      maintainer="GitLab Distribution Team" \
      vendor="GitLab" \
      version=${GITLAB_VERSION} \
      release=${GITLAB_VERSION} \
      summary="GitLab Puma run the GitLab Rails application with Puma web server." \
      description="GitLab Puma run the GitLab Rails application with Puma web server."

ADD gitlab-puma-ee.tar.gz /
ADD gitlab-python.tar.gz /

COPY scripts/ /scripts
COPY puma.rb ${GITLAB_CONFIG}/puma.rb

ENV GITALY_FEATURE_DEFAULT_ON=1

RUN dnf clean all \
    && rm -r /var/cache/dnf \
    && dnf --disableplugin=subscription-manager --nogpgcheck install -yb --nodocs procps \
    && cd /srv/gitlab \
    && mkdir -p public/uploads \
    && chmod 0700 public/uploads \
    && chown -R ${GITLAB_USER}:${GITLAB_USER} public/uploads

USER ${GITLAB_USER}:${GITLAB_USER}

HEALTHCHECK --interval=30s --timeout=30s --retries=5 CMD /scripts/healthcheck

CMD /scripts/process-wrapper
