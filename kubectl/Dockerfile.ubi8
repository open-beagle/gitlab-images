ARG UBI_IMAGE=registry.access.redhat.com/ubi8/ubi:8.2

FROM ${UBI_IMAGE}

ARG DNF_OPTS

ADD kubectl.tar.gz /

RUN chmod +x /usr/local/bin/{kubectl,yq} \
    && dnf clean all \
    && rm -r /var/cache/dnf \
    && dnf ${DNF_OPTS} install -by --nodocs openssh openssl \
    && rm /usr/libexec/openssh/ssh-keysign

# Default to non-root user
USER 65534:65534
