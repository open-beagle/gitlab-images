ARG UBI_IMAGE=registry.access.redhat.com/ubi8/ubi

FROM ${UBI_IMAGE}

ADD gitlab-ruby.tar.gz /

COPY scripts/ /scripts

ENV CONFIG_TEMPLATE_DIRECTORY=/etc

RUN dnf clean all \
    && rm -rf /var/cache/dnf \
    && dnf --disableplugin=subscription-manager --nogpgcheck install -by --nodocs ncurses libedit

ENTRYPOINT ["/scripts/entrypoint.sh"]

CMD [ "irb" ]
